rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: only the owner can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Tours collection
    match /tours/{tourId} {
      // Anyone authenticated can read a tour (needed for shared/spectator URLs)
      allow read: if request.auth != null;

      // Only the owner can create, update, or delete a tour
      allow create: if request.auth != null
                    && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null
                    && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.ownerId == request.auth.uid;

      // Rounds subcollection
      match /rounds/{roundId} {
        // Anyone authenticated can read rounds (for shared scoring view)
        allow read: if request.auth != null;

        // Only the tour owner can create or delete rounds
        allow create, delete: if request.auth != null
                              && get(/databases/$(database)/documents/tours/$(tourId)).data.ownerId == request.auth.uid;

        // Tour owner or any tour participant can update rounds (for scoring)
        allow update: if request.auth != null
                      && (get(/databases/$(database)/documents/tours/$(tourId)).data.ownerId == request.auth.uid
                          || request.auth.uid in get(/databases/$(database)/documents/tours/$(tourId)).data.participantIds);
      }
    }

    // Saved courses collection: any authenticated user can read; creator can update/delete
    match /savedCourses/{courseId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }
  }
}
